{
  "compilerOptions": {
    "typeRoots": ["node_modules/@types"],
    "rootDir": "./src",
    "outDir": "./dist",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["dom", "ES2021"],
    "module": "ES2022",
    "moduleResolution": "Node",
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "target": "ES2021",
    "sourceMap": true
  },
  "include": ["**/*.ts"]
}
